<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:id="@+id/new_nameTV"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/new_nameET"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_nameTV"
            android:layout_toEndOf="@+id/new_nameTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company: Name: "
            android:id="@+id/new_compTV"
            android:textSize="25sp"
            android:layout_below="@id/new_nameTV"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/new_compET"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_compTV"
            android:layout_toEndOf="@+id/new_compTV"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:id="@+id/new_priceTV"
            android:textSize="25sp"
            android:layout_below="@id/new_compTV"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/new_priceET"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_priceTV"
            android:layout_toEndOf="@+id/new_priceTV"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_priceTV"
            android:layout_marginTop="35dp"
            android:text="Press To Take Picture"
            android:id="@+id/new_pictureBtn"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_image"
            android:layout_below="@id/new_pictureBtn"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_saveBtn"
                android:text="Press To Save"
                android:layout_below="@id/new_image"
                />

    </RelativeLayout>


</ScrollView>